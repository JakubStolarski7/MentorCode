// Konfiguracja bazy danych PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ----------------------------------------------------
// Modele Wymagane dla NextAuth.js (Adapter)
// ----------------------------------------------------

// Model Użytkownika (NextAuth wymaga tych pól)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // DODATKOWE POLE DLA LOGOWANIA PRZEZ EMAIL/HASŁO (CredentialsProvider)
  // UWAGA: Używamy opcjonalnego Stringa (String?), aby umożliwić logowanie
  // przez Google/GitHub, gdzie hasło nie jest potrzebne.
  hashedPassword String?

  // Relacje NextAuth
  accounts      Account[]
  sessions      Session[]
}

// Model Konta (Wymagany przez Adapter NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Model Sesji (Wymagany przez Adapter NextAuth)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Model Tokena Weryfikacyjnego (Wymagany przez Adapter NextAuth - np. dla Magic Link)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}